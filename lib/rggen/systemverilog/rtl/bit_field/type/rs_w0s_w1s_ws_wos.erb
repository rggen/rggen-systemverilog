  .WIDTH            (<%= width %>),
  .INITIAL_VALUE    (<%= initial_value %>),
  .SW_READ_ACTION   (<%= read_action %>),
  .SW_WRITE_ACTION  (<%= write_action %>),
  .HW_ACCESS        (3'b100)
) u_bit_field (
  .i_clk              (<%= clock %>),
  .i_rst_n            (<%= reset %>),
  .bit_field_if       (<%= bit_field_if %>),
  .o_write_trigger    (),
  .o_read_trigger     (),
  .i_sw_write_enable  ('1),
  .i_hw_write_enable  ('0),
  .i_hw_write_data    ('0),
  .i_hw_set           ('0),
  .i_hw_clear         (<%= clear[loop_variables] %>),
  .i_value            ('0),
  .i_mask             ('1),
  .o_value            (<%= value_out[loop_variables] %>),
  .o_value_unmasked   ()
);
